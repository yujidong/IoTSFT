# Network Configuration
# Sepolia Testnet RPC URL (Get from Infura, Alchemy, or QuickNode)
SEPOLIA_URL=https://sepolia.infura.io/v3/YOUR_PROJECT_ID

# Mainnet RPC URL (Optional, for mainnet deployment)
MAINNET_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID

# Private Keys (NEVER commit real private keys!)
# Deploy account private key (should have sufficient ETH for deployment)
PRIVATE_KEY=your_private_key_here

# Additional account for testing (optional)
TEST_ACCOUNT_PRIVATE_KEY=your_test_account_private_key_here

# Contract Addresses (Update after deployment)
# IoTSFT Contract Address on Sepolia
CONTRACT_ADDRESS_SEPOLIA=

# IoTSFT Contract Address on Mainnet
CONTRACT_ADDRESS_MAINNET=

# Etherscan API Key (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Test Configuration
# Default test addresses
DEFAULT_RECIPIENT_ADDRESS=0x8908865F3dc2D7D26237da944F0a2dcDC7B01859
DEFAULT_TOKEN_ID=1
DEFAULT_MINT_VALUE=100
DEFAULT_SPLIT_AMOUNT=50

# Performance Test Configuration
GAS_PRICE_GWEI=20
GAS_LIMIT=500000
BLOCK_CONFIRMATIONS=1

# Development Configuration
ENABLE_LOGGING=true
LOG_LEVEL=info
